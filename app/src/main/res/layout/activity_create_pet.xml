<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E3"
    tools:context=".CreatePetActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E3E3E3">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#F4F4F4"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_back_arrow_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tell us about your pet"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Once you compete the sign in process, you'll have the opportunity to add and modify your pet's info"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="96dp"
            android:drawableLeft="@drawable/ic_type_pet"
            android:drawablePadding="5dp"
            android:text="What type of pet?"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_goneMarginStart="15dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0"
            android:weightSum="2"
            android:gravity="center">
            <RadioButton
                android:id="@+id/radiobtn_dog"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="10dp"
                android:button="@null"
                android:textSize="18sp"
                android:fontFamily="@font/inter_bold"
                android:text="Dog"
                android:drawableTop="@drawable/ic_dog"
                android:drawablePadding="0dp"
                android:background="@drawable/bg_radio_dog_cat"
                />
            <RadioButton
                android:id="@+id/radiobtn_cat"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:button="@null"
                android:textSize="18sp"
                android:fontFamily="@font/inter_bold"
                android:text="Dog"
                android:drawableTop="@drawable/ic_cat"
                android:drawablePadding="0dp"
                android:background="@drawable/bg_radio_dog_cat"
                />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical"
        android:layout_marginTop="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/icon_pet"
                android:drawablePadding="5dp"
                android:text="What type of pet?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ahinhanhdemo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="136dp"
                android:backgroundTint="#F4F4F4"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_camera"
                app:layout_constraintTop_toTopOf="@+id/circleImageView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Name*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Age*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Species*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Color*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Weight*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Height*"
                android:padding="10dp"
                android:background="@drawable/bg_edittext"/>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:paddingStart="10dp"
                    android:text="Sex:"/>
                <CheckBox
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Male"
                    android:textSize="20dp"/>
                <CheckBox
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Female"
                    android:textSize="20dp"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_behaviorActi"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:shadowRadius="10"
                android:text="Next"
                android:textStyle="bold"
                android:textColor="#F4F4F4"
                android:backgroundTint="#336666"
                app:cornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>